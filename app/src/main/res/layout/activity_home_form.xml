<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeForm"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewHistoryTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:text="Bienvenido"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonProducts"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="28dp"
            android:text="Productos"
            app:layout_constraintBottom_toTopOf="@+id/buttonUsuarios"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonCarrito"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:text="Carrito"
            app:layout_constraintBottom_toTopOf="@+id/buttonRegisters"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonProducts"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonUsuarios"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="218dp"
            android:text="Usuarios"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonProducts" />

        <Button
            android:id="@+id/buttonShops"
            android:layout_width="182dp"
            android:layout_height="133dp"
            android:layout_marginStart="12dp"
            android:text="Tiendas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonUsuarios"
            app:layout_constraintVertical_bias="0.376" />

        <Button
            android:id="@+id/buttonRegisters"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginBottom="216dp"
            android:layout_weight="1"
            android:text="Historiales"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttonUsuarios"
            app:layout_constraintTop_toBottomOf="@+id/buttonCarrito" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>